<% if Helpers.is_logged_in?(session) %>
	<h1>Welcome, <%=@user.username.capitalize%></h1>
	<h2>Here is your Tweet:</h1>

	<p><%=@tweet.content%></p><br>

	<h3><a href="/tweets/<%=@tweet.id%>/edit">Edit Tweet</a></h3>

	
  	<form method="post" action="/tweets/<%=@tweet.id%>/delete">
	  <input id="hidden" type="hidden" name="_method" value="DELETE">
	  <input type="submit" value="Delete Tweet">
  	</form>

  <% else %>
      <h1> You Must Be Logged in to View Tweets </h1>
  <% end %>